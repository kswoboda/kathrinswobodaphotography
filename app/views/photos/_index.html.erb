<%= link_to new_photo_path, class: "right btn-floating btn-large waves-effect waves-light red" do %>
  <i class="material-icons">add</i>
<% end %>
<table cellpadding="10" class="striped">
  <thead>
    <tr>
      <th>Thumbnail</th>
      <th>Album</th>
      <th>Width</th>
      <th>Priority</th>
      <th> Show </th>
      <th> Edit </th>
      <th> Delete </th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag photo.picture.url, height: "100px", class: "materialboxed" %></td>
        <td><%= link_to photo.album.name, controller: "albums", action: "show", id: photo.album_id%></td>
        <td><%= photo.width %></td>
        <td><%= photo.priority %></td>
        <td>
          <%= link_to photo do %>
            <i class="small material-icons">open_in_browser</i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_photo_path(photo) do %>
            <i class="small material-icons">edit</i>
          <% end %>
        </td>
        <td>
          <%= link_to photo, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="small material-icons">delete_forever</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>